<% content_for :title, "Dashboard - Customer Pulse" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
  <p class="mt-2 text-gray-600">Overview of customer feedback</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 bg-indigo-100 rounded-full">
        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Feedback</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @total_feedback %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 bg-green-100 rounded-full">
        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Today</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @today_count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 bg-yellow-100 rounded-full">
        <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Unprocessed</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @unprocessed_count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-3 bg-blue-100 rounded-full">
        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">This Week</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @week_count %></p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <!-- By Category -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">By Category</h3>
    <div class="space-y-3">
      <% Feedback.categories.keys.each do |category| %>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 capitalize"><%= category.gsub('_', ' ') %></span>
          <span class="text-sm font-medium text-gray-900"><%= @feedback_by_category[category] || 0 %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- By Priority -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">By Priority</h3>
    <div class="space-y-3">
      <% [['p1', 'Critical', 'text-red-600'], ['p2', 'High', 'text-orange-600'], ['p3', 'Medium', 'text-blue-600'], ['p4', 'Low', 'text-gray-600'], ['unset', 'Unset', 'text-gray-400']].each do |priority, label, color| %>
        <div class="flex justify-between items-center">
          <span class="text-sm <%= color %>"><%= label %></span>
          <span class="text-sm font-medium text-gray-900"><%= @feedback_by_priority[priority] || 0 %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- By Source -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">By Source</h3>
    <div class="space-y-3">
      <% Feedback.sources.keys.each do |source| %>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 capitalize"><%= source.gsub('_', ' ') %></span>
          <span class="text-sm font-medium text-gray-900"><%= @feedback_by_source[source] || 0 %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- High Priority Items -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">High Priority Items</h3>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @high_priority_feedback.any? %>
        <% @high_priority_feedback.each do |feedback| %>
          <%= link_to feedback_path(feedback), class: "block px-6 py-4 hover:bg-gray-50" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= feedback.title || feedback.content.truncate(50) %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= feedback.source_label %> &bull; <%= time_ago_in_words(feedback.created_at) %> ago
                </p>
              </div>
              <span class="ml-2 px-2 py-1 text-xs font-medium rounded <%= feedback.priority == 'p1' ? 'bg-red-100 text-red-800' : 'bg-orange-100 text-orange-800' %>">
                <%= feedback.priority.upcase %>
              </span>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          No high priority items
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Feedback -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h3 class="text-lg font-semibold text-gray-900">Recent Feedback</h3>
      <%= link_to "View All", feedback_index_path, class: "text-sm text-indigo-600 hover:text-indigo-800" %>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @recent_feedback.any? %>
        <% @recent_feedback.each do |feedback| %>
          <%= link_to feedback_path(feedback), class: "block px-6 py-4 hover:bg-gray-50" do %>
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= feedback.title || feedback.content.truncate(50) %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= feedback.source_label %> &bull; <%= feedback.category_label %>
                </p>
              </div>
              <span class="text-xs text-gray-400">
                <%= time_ago_in_words(feedback.created_at) %> ago
              </span>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          No feedback yet
        </div>
      <% end %>
    </div>
  </div>
</div>
