<% content_for :title, "Pulse Reports - Customer Pulse" %>

<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900">Pulse Reports</h1>
  <p class="mt-1 text-gray-600">View history of sent pulse email digests</p>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Period</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Feedback Count</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recipients</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent At</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @pulse_reports.any? %>
        <% @pulse_reports.each do |report| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                <%= report.period_start.strftime("%b %d") %> - <%= report.period_end.strftime("%b %d, %Y") %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= report.feedback_count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= report.recipient_count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= report.sent_at ? report.sent_at.strftime("%b %d, %Y %H:%M") : "-" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium rounded <%= report.sent? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= report.sent? ? 'Sent' : 'Pending' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", pulse_report_path(report), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <% if report.sent? %>
                <%= button_to "Resend", resend_pulse_report_path(report), method: :post, class: "text-gray-600 hover:text-gray-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="px-6 py-12 text-center text-gray-500">
            No pulse reports yet. Reports are generated daily at 9:00 AM.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @pagy.pages > 1 %>
  <div class="mt-6 flex justify-center">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
