<% content_for :title, "#{@feedback.title || 'Feedback'} - Customer Pulse" %>

<div class="mb-6">
  <%= link_to feedback_index_path, class: "text-indigo-600 hover:text-indigo-800 text-sm flex items-center" do %>
    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Feedback
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-6">
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="text-xl font-semibold text-gray-900">
              <%= @feedback.title || "Feedback ##{@feedback.id}" %>
            </h1>
            <div class="mt-1 flex items-center space-x-2 text-sm text-gray-500">
              <span class="px-2 py-0.5 rounded bg-gray-100 text-gray-700"><%= @feedback.source_label %></span>
              <span>&bull;</span>
              <span><%= @feedback.created_at.strftime("%B %d, %Y at %H:%M") %></span>
            </div>
          </div>
          <div class="flex space-x-2">
            <span class="px-2 py-1 text-xs font-medium rounded <%= priority_badge_class(@feedback.priority) %>">
              <%= @feedback.priority_label %>
            </span>
            <span class="px-2 py-1 text-xs font-medium rounded <%= category_badge_class(@feedback.category) %>">
              <%= @feedback.category_label %>
            </span>
          </div>
        </div>
      </div>

      <div class="px-6 py-4">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Content</h3>
        <div class="prose max-w-none text-gray-600">
          <%= simple_format(@feedback.content) %>
        </div>
      </div>

      <% if @feedback.author_name.present? || @feedback.author_email.present? %>
        <div class="px-6 py-4 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Author</h3>
          <p class="text-gray-600">
            <%= @feedback.author_name %>
            <% if @feedback.author_email.present? %>
              <span class="text-gray-400">(<%= @feedback.author_email %>)</span>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>

    <% if @feedback.ai_summary.present? %>
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="h-5 w-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            AI Analysis
          </h2>
        </div>
        <div class="px-6 py-4">
          <p class="text-gray-600"><%= @feedback.ai_summary %></p>
          <% if @feedback.ai_confidence_score.present? %>
            <div class="mt-4 flex items-center">
              <span class="text-sm text-gray-500 mr-2">Confidence:</span>
              <div class="flex-1 max-w-xs bg-gray-200 rounded-full h-2">
                <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= (@feedback.ai_confidence_score * 100).round %>%"></div>
              </div>
              <span class="ml-2 text-sm text-gray-600"><%= (@feedback.ai_confidence_score * 100).round %>%</span>
            </div>
          <% end %>
          <% if @feedback.ai_processed_at.present? %>
            <p class="mt-2 text-xs text-gray-400">
              Processed <%= time_ago_in_words(@feedback.ai_processed_at) %> ago
            </p>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @feedback.raw_data.present? %>
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Raw Data</h2>
        </div>
        <div class="px-6 py-4">
          <pre class="text-xs bg-gray-50 p-4 rounded overflow-x-auto"><%= JSON.pretty_generate(@feedback.raw_data) %></pre>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Status & Actions -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Status & Actions</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <%= form_with model: @feedback, url: override_feedback_path(@feedback), method: :patch, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <%= f.select :status, Feedback.statuses.keys.map { |s| [s.titleize.gsub('_', ' '), s] }, {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
            <%= f.select :priority, [["Unset", "unset"], ["P1 - Critical", "p1"], ["P2 - High", "p2"], ["P3 - Medium", "p3"], ["P4 - Low", "p4"]], {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <%= f.select :category, Feedback.categories.keys.map { |c| [c.titleize.gsub('_', ' '), c] }, {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
          </div>

          <%= f.submit "Update", class: "w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 text-sm font-medium cursor-pointer" %>
        <% end %>

        <hr class="my-4">

        <%= button_to "Reprocess with AI", reprocess_feedback_path(@feedback), method: :post, class: "w-full bg-gray-100 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-200 text-sm font-medium" %>
      </div>
    </div>

    <!-- Metadata -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Details</h2>
      </div>
      <div class="px-6 py-4 space-y-3 text-sm">
        <div class="flex justify-between">
          <span class="text-gray-500">ID</span>
          <span class="text-gray-900">#<%= @feedback.id %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Source ID</span>
          <span class="text-gray-900 truncate max-w-[150px]" title="<%= @feedback.source_external_id %>">
            <%= @feedback.source_external_id || "N/A" %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Created</span>
          <span class="text-gray-900"><%= @feedback.created_at.strftime("%b %d, %Y %H:%M") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Updated</span>
          <span class="text-gray-900"><%= @feedback.updated_at.strftime("%b %d, %Y %H:%M") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Manually Reviewed</span>
          <span class="text-gray-900"><%= @feedback.manually_reviewed ? "Yes" : "No" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
