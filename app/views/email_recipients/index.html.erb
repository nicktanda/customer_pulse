<% content_for :title, "Email Recipients - Customer Pulse" %>

<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Email Recipients</h1>
    <p class="mt-1 text-gray-600">Manage who receives the daily Customer Pulse email</p>
  </div>
  <% if current_user.admin? %>
    <%= link_to new_recipient_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 text-sm font-medium" do %>
      <span class="flex items-center">
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Add Recipient
      </span>
    <% end %>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Added</th>
        <% if current_user.admin? %>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @recipients.any? %>
        <% @recipients.each do |recipient| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-8 w-8 bg-indigo-100 rounded-full flex items-center justify-center">
                  <span class="text-indigo-600 font-medium text-sm"><%= recipient.email[0].upcase %></span>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900"><%= recipient.email %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= recipient.name || "-" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs font-medium rounded <%= recipient.active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                <%= recipient.active ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= recipient.created_at.strftime("%b %d, %Y") %>
            </td>
            <% if current_user.admin? %>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Edit", edit_recipient_path(recipient), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= button_to "Delete", recipient_path(recipient), method: :delete, data: { confirm: "Remove this recipient?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="<%= current_user.admin? ? 5 : 4 %>" class="px-6 py-12 text-center text-gray-500">
            No recipients configured. Add recipients to start receiving the daily pulse email.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
